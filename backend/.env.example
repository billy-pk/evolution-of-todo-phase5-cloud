# Database
DATABASE_URL=postgresql://username:password@ep-example.neon.tech/hackathon_todo?sslmode=require

# Authentication (Phase 2 + Phase 3)
BETTER_AUTH_SECRET=your-super-secret-key-change-this-in-production

# BETTER_AUTH_URL: Frontend URL where Better Auth is running (for JWKS validation)
# - Local: http://localhost:3000
# - Production: https://your-frontend-domain.vercel.app
BETTER_AUTH_URL=http://localhost:3000

# Legacy settings (optional, kept for backwards compatibility)
BETTER_AUTH_ISSUER=http://localhost:3000
BETTER_AUTH_JWKS_URL=http://localhost:3000/api/auth/jwks

# Environment
ENVIRONMENT=development

# API Config
API_HOST=0.0.0.0
API_PORT=8000

# Phase 3: OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_API_TIMEOUT=30

# Phase 3: MCP Server Configuration
# Deployment Mode:
# - MOUNT_MCP_SERVER=true   : MCP server mounted on FastAPI (unified deployment, e.g., Render/Vercel)
# - MOUNT_MCP_SERVER=false  : MCP server runs separately on port 8001 (local dev or separate services)
# Default: true (most cloud deployments use single service)
MOUNT_MCP_SERVER=true

# Optional: Override MCP server URL (leave empty for auto-detection)
# Auto-detected based on MOUNT_MCP_SERVER:
#   - When true: http://localhost:8000/mcp
#   - When false: http://localhost:8001/mcp
MCP_SERVER_URL=

# Phase 3: Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=100